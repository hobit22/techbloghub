# 애플리케이션 설정
APP_NAME="TechBlog Hub"
APP_VERSION="1.0.0"
DEBUG=False

# 데이터베이스 설정
# Supabase Direct Connection (추천)
# options=-csearch_path%3Dfastapi: fastapi 스키마를 사용 (public 대신)
DATABASE_URL=postgresql+asyncpg://postgres.xxx:YOUR_PASSWORD@aws-1-ap-northeast-2.pooler.supabase.com:5432/postgres

# 또는 Transaction Pooler (서버리스용 - asyncpg와 호환성 문제 있음)
# DATABASE_URL=postgresql+asyncpg://postgres.xxx:YOUR_PASSWORD@aws-1-ap-northeast-2.pooler.supabase.com:6543/postgres?options=-csearch_path%3Dfastapi

# CORS 설정 (JSON 배열 형식)
ALLOWED_ORIGINS=["https://teckbloghub.kr","https://www.teckbloghub.kr","http://localhost:3000"]

# Admin API 인증 (관리자 API용 키)
ADMIN_API_KEY=your-secret-admin-key-change-in-production

# RSS 프록시 (선택사항 - Cloudflare Worker 등)
RSS_PROXY_URL=https://your-rss-proxy.workers.dev/?url=

# 콘텐츠 추출 설정
MIN_CONTENT_LENGTH=500
MIN_TEXT_RATIO=0.01
PLAYWRIGHT_TIMEOUT=30000

# OpenAI 설정
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=10000

# Discord 알림 설정 (선택사항)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_WEBHOOK_ENABLED=true
